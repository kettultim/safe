<% content_for :title, "#{@space.country_name}: #{@space.name}" %>

<p><%= simple_format(@space.description).html_safe %></p>

<% if @space.photos.count > 0 %>
  <h3>Photos</h3>
  <div class="row">
    <%= render partial: 'photo', collection: @space.photos %>
  </div>
<% end %>


<h3>Availability</h3>

<div class="row">
  <% if @space.available? %>
    <ul>
      <%= render(
          partial: 'availability',
          collection: @space.availabilities.upcoming) %>
    </ul>
    <% if @show_request_form %>
      <%= render partial: 'request_form' %>
    <% end %>
  <% else %>
    <p>This space is not currently available.</p>
  <% end %>
</div>
