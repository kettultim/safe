<div class="col-md-6 col-lg-6">
  <div class="panel panel-default space-<%= space.id %>">
    <div class="panel-heading">
      <h3>
        <%= link_to space.name, space %><br/>
        <%= link_to space.country_name, space %>
      </h3>
    </div>
    <div class="panel-body">
      <% if space.has_photo? %>
        <%= image_tag space.main_photo.url(:medium) %>
      <% end %>
      <p>
        <%= truncate(space.description, length: 400) %>
        <%= link_to 'Read More', space %>
      </p>
    </div>
  </div>
</div>
