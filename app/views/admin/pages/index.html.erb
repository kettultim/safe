<% content_for :title, 'Pages' %>

<%= link_to 'New Page', new_admin_page_path %>

<table class="table table-bordered">
  <tr><th>Title</th><th>Actions</th></tr>
  <% @pages.each do |page| %>
    <tr class="page-<%= page.id %>">
      <td><%= page.title %></td>
      <td><%= link_to 'Edit', edit_admin_page_path(page) %></td>
    </tr>
  <% end %>
</table>

<%= paginate @pages %>
