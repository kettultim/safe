<tr class="menu-item-<%= menu_item.id %>">
  <td>
    <% menu_item.level.times do %>
      &nbsp;&nbsp;&nbsp;
    <% end %>

    <%= menu_item.link_label %>
  </td>
  <td><%= menu_item.link_url %></td>
  <td><%= menu_item.weight %></td>
  <td>
    <%= link_to 'Edit', edit_admin_menu_item_path(menu_item) %>
    <%= link_to 'Delete', admin_menu_item_path(menu_item), method: :delete,
        data: { confirm: 'Are you sure?' } %>
  </td>
</tr>

<% menu_item.items.ordered.each do |menu_item| %>
  <%= render partial: 'item_and_sub_items', locals: { menu_item: menu_item } %>
<% end %>
